@model ViewTeamRole

<div class="card mt-3" style="width: 18rem">
    <div class="card-body" style="padding: 7px">
        <h6 class="card-title">@Model.Name</h6>
        <p class="card-text">@Model.Description</p>
        <a href="#" class="card-link" style="font-size: 14px">Изменить</a>
        <a href="#" type="button" data-toggle="modal" data-target=".bd-example-modal-sm" class="card-link" style="font-size: 14px">Удалить</a>
    </div>
</div>

<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Удалить роль?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="justify-content-around modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="justify-content: start">Отменить</button>
                <a type="button" class="btn btn-outline-danger" asp-controller="TeamRole" asp-action="DeleteTeamRole" asp-route-teamRoleGuid="@Model.Guid">Удалить</a>
            </div>
        </div>
    </div>
</div>