@model User_Interface.Views.Home.Login
@{
    Layout = null;
    ViewData["Title"] = "Войти в сервис EduTeam";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/log_reg.css"/>
</head>
<body>
<div class="panel panel-success" style="max-width: 600px; margin: auto; margin-top: 40px; margin-bottom: 60px; border-radius: 30px;">
    <div style="width: 50%; display: inline-block; margin: 20px 10px">
        <div class="panel-heading text-center" style="margin-bottom: 40px"><h4>Войти в EduTeam</h4></div>
        <hr>
        <div class="panel-body">
            <form class="p-a-l" asp-action="Login" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group input-pole">
                    <label asp-for="Email">Почта</label>
                    <input class="form-control" asp-for="Email"/>
                </div>
                <div class="form-group input-pole">
                    <label asp-for="Password">Пароль</label>
                    <input class="form-control" asp-for="Password"/>
                </div>
                <div class="text-center" style="margin-top: 20px">
                    <button class="btn btn-primary" type="submit">
                        Войти
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div style="display: inline-block; width: 45%; vertical-align: top; margin: 10% auto">
        <img src="~/Resources/man_login.png" width="100%">
    </div>
</div>

</body>
</html>