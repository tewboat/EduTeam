@model List<User_Interface.Models.ViewUser>

@{
    ViewData["Title"] = "Люди — EduTeam";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/proj_peop.css"/>
    <link rel="stylesheet" href="~/css/user_summary.css"/>
</head>
<body>
<div>
    <div style="display: inline-block; width: 20%; vertical-align: top; margin-top: 100px">
        <div class="card">
            <div>
                <div class="card-body">
                    <h6 class="card-title">Сортировать по:</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                             дате обновления резюме
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">
                            релевантности
                        </label>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <h6 class="card-title">Фильтр</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Разговорный уровень английского
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Предпочитает личные встречи
                            </label>
                        </div>
                        <div class="form-check check-box">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Готов к долгосрочному проекту (от 3-ех месяцев)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="display: inline-block; width: 70%">
        <div class="container">
            <br/>
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form class="card card-sm">
                        <div class=" row no-gutters align-items-center">
                            <div class="col-auto">
                                <i class="fas fa-search h4 text-body"></i>
                            </div>
                            <div class="col">
                                <input class="form-control form-control-sm form-control-borderless" type="search" placeholder="Найти участника для проекта...">
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-sm btn-success" type="submit">Найти</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div style="margin: 20px; margin-bottom: 100px">
            @for (int i = 0; i < Model.Count; i += 2)
            {
                <div class="row" style="margin-top: 20px">
                    <div class="col-xl-6 col-lg-7 col-md-12">
                        @Html.Partial("UserSummary", Model[i])
                    </div>
                    <div class="col-xl-6 col-lg-7 col-md-12">
                        @Html.Partial("UserSummary", Model[i + 1])
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</body>